<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button_2"
        android:height="30dp"
        android:width="30dp"
        android:layout_above="@+id/button_decimal"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button_3"
        android:height="30dp"
        android:width="30dp"
        android:layout_above="@+id/button_equals"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button_0"
        android:height="30dp"
        android:width="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/button_decimal"
        android:height="30dp"
        android:width="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button_2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button_equals"
        android:height="30dp"
        android:width="30dp"
        android:layout_alignTop="@+id/button_decimal"
        android:layout_alignStart="@+id/button_3"
        android:background="#ffffe6b7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button_1"
        android:height="30dp"
        android:width="30dp"
        android:layout_above="@+id/button_0"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button_5"
        android:height="30dp"
        android:width="30dp"
        android:layout_above="@+id/button_1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button_8"
        android:height="30dp"
        android:width="30dp"
        android:layout_above="@+id/button_5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button_4"
        android:height="30dp"
        android:width="30dp"
        android:layout_above="@+id/button_1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button_6"
        android:height="30dp"
        android:width="30dp"
        android:layout_above="@+id/button_3"
        android:layout_alignStart="@+id/button_3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button_9"
        android:height="30dp"
        android:width="30dp"
        android:layout_alignTop="@+id/button_8"
        android:layout_alignStart="@+id/button_6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button_7"
        android:height="30dp"
        android:width="30dp"
        android:layout_alignTop="@+id/button_8"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button_add"
        android:height="20dp"
        android:width="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="#ffeefffb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button_subtract"
        android:height="20dp"
        android:width="20dp"
        android:layout_alignTop="@+id/button_add"
        android:layout_alignStart="@+id/button_8"
        android:background="#ffeefffb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/button_multiply"
        android:height="20dp"
        android:width="20dp"
        android:layout_above="@+id/button_8"
        android:layout_alignParentStart="true"
        android:background="#ffeefffb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/button_divide"
        android:height="20dp"
        android:width="20dp"
        android:layout_above="@+id/button_8"
        android:layout_alignStart="@+id/button_8"
        android:background="#ffeefffb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:id="@+id/button_clear"
        android:height="20dp"
        android:width="20dp"
        android:layout_above="@+id/button_add"
        android:layout_alignParentStart="true"
        android:background="#ffffe6b7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+/-"
        android:id="@+id/button_negate"
        android:height="20dp"
        android:width="20dp"
        android:layout_alignTop="@+id/button_clear"
        android:layout_alignStart="@+id/button_subtract"
        android:background="#ffffe6b7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:id="@+id/button_percent"
        android:height="20dp"
        android:width="20dp"
        android:layout_above="@+id/button_subtract"
        android:layout_alignStart="@+id/button_9"
        android:background="#ffffe6b7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_expression"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:width="200dp"
        android:text="0"
        android:enabled="false"
        android:editable="false"
        android:inputType="none"
        android:gravity="right" />

</RelativeLayout>
